#include <stdio.h>
#include <stdlib.h>
#include <math.h> 

int main() {
    int nl;
    float ml = 0, a;

    printf("Digite o numero de lados do poligono (3, 4 ou 5): ");
    scanf("%i", &nl);

    if (nl == 3) {
        printf("Digite a medida do lado (em cm): ");
        scanf("%f", &ml);
        
        area = (ml * ml * sqrt(3)) / 4.0;
        printf("TRIANGULO\n");
        printf("Area: %.2f cm2\n", a);
    }
    else if (nl == 4) {
        printf("Digite a medida do lado (em cm): ");
        scanf("%f", &ml);
        
        a = ml * ml;
        printf("\nQUADRADO\n");
        printf("Area: %.2f cm2\n", a);
    }
    else if (nl == 5) {
        printf("\nPENTAGONO\n");
    }
    else {
        printf("\nNumero de lados invalido para este exercicio.\n");
    }

    return 0;
}
